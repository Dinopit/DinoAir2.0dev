{
    "app": {
        "name": "DinoAir 2.0",
        "version": "2.0.0",
        "description": "Modular note-taking application with AI capabilities",
        "theme": "light",
        "auto_save": true,
        "backup_interval": 300,
        "startup_page": "notes"
    },
    "database": {
        "backup_on_startup": true,
        "cleanup_interval": 3600,
        "max_backup_files": 10,
        "connection_timeout": 30,
        "retry_attempts": 3
    },
    "ai": {
        "default_model": "gpt-3.5-turbo",
        "max_tokens": 2000,
        "temperature": 0.7,
        "timeout": 30,
        "enabled": true
    },
    "ui": {
        "window_width": 1200,
        "window_height": 800,
        "font_size": 12,
        "font_family": "Segoe UI",
        "show_sidebar": true,
        "sidebar_width": 200,
        "show_status_bar": true
    },
    "input_processing": {
        "enable_profanity_filter": true,
        "enable_pattern_detection": true,
        "enable_auto_translation": false,
        "default_language": "en"
    },
    "logging": {
        "level": "INFO",
        "max_file_size": "10MB",
        "backup_count": 5,
        "log_to_file": true,
        "log_to_console": true
    },
    "pseudocode_translator": {
        "enabled": true,
        "model": "qwen",
        "model_path": "./models",
        "temperature": 0.3,
        "max_tokens": 1024,
        "default_language": "python",
        "streaming_enabled": true,
        "streaming_threshold": 50000,
        "cache_enabled": true,
        "auto_warmup": true,
        "supported_languages": [
            "python",
            "javascript",
            "typescript",
            "java",
            "cpp",
            "csharp",
            "go",
            "rust",
            "ruby",
            "php"
        ],
        "ui_settings": {
            "show_progress": true,
            "show_warnings": true,
            "auto_format_code": true,
            "syntax_highlighting": true
        }
    }
}
